graph LR
    subgraph "Control Input"
        MCU(MCU Pin)
    end

    subgraph "Transistor Switch"
        Rb[R_base]
        Q1((NPN Transistor))
    end

    subgraph "Load Circuit"
        Rl[R_load]
        LED[LED]
    end

    subgraph "Power"
        VCC(5V Supply)
        GND(GND)
    end

    %% Connections
    MCU --> Rb
    Rb --> Q1
    Q1 --> GND

    VCC --> Rl
    Rl --> LED
    LED --> Q1

    style MCU fill:#e2e3e5
    style Q1 fill:#ffeeba
    style VCC fill:#d4edda
    style GND fill:#f8d7da